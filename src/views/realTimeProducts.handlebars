<h1>{{title}}</h1>
<h2 id="rol" class="hidden">{{user.rol}}</h2>
<h2 id="email" class="hidden">{{user.email}}</h2>
<div id="productsRealTime" class="container"></div>


<div class="mt-8 mx-auto max-w-md">
    <div class="bg-white py-8 px-4 shadow">
        <form class="space-y-5" action="/api/products" method="POST" enctype="multipart/form-data">
            <legend class="font-bold text-gray-700 text-center text-xl mb-2">Agregar Producto al Catálogo</legend>
            <label class="block text-sm uppercase text-gray-500 mb-2 font-bold">Nombre del producto</label>
            <input class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="text" name="title">
            
            <label class="block text-sm uppercase text-gray-500 mb-2 font-bold">Descripción</label>
            <input class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="text" name="description">
            
            <label class="block text-sm uppercase text-gray-500 mb-2 font-bold">Precio</label>
            <input class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="number" name="price">
             <label class="block text-sm uppercase text-gray-500 mb-2 font-bold">Imagen</label>
            <input class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="text" name="img">
            <label class="block text-sm uppercase text-gray-500 mb-2 font-bold">Imagen</label>
            <input class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="file" name="thumbnail">
            
            <label class="block text-sm uppercase text-gray-500 mb-2 font-bold">Stock</label>
            <input class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="number" name="stock">
            
            <label class="block text-sm uppercase text-gray-500 mb-2 font-bold">Codigo</label>
            <input class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="text" name="code">
            
            <label class="block text-sm uppercase text-gray-500 mb-2 font-bold">Categoría</label>
            <input class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="text" name="category">
            
            <label class="block text-sm uppercase text-gray-500 mb-2 font-bold">Añade su Estado</label>
            <select class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" id="status" name="status">
                <option value="true">Activo</option>
                <option value="false">Inactivo</option>
            </select>
            
            <input class="hidden" type="email" id="owner" value="{{user.email}}" name="owner">
            
            <input class="w-full bg-blue-600 mt-3 rounded-lg hover:bg-blue-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Agregar Producto">
        </form>
    </div>
</div>
