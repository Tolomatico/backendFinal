<div class="mt-8 mx-auto max-w-md">
    <div class="bg-white py-8 px-4 shadow">

        <form class="space-y-5" action="/api/users/login" method="POST" enctype="application/x-www-form-urlencoded">
            <legend class="text-center text-2xl font-extrabold"> Iniciar sesión</legend>


            <a  class=" flex w-full  border bg-blue-500 rounded-lg p-1 " href="/api/sessions/github">
                 <p class="font-bold text-white w-2/3 text-center">Ingresar con github</p>
                    <ion-icon class="text-3xl text-white w-1/3" name="logo-github"></ion-icon>
                  
               

            </a>
            <a class=" flex w-full border bg-blue-500 rounded-lg  p-1" href="/api/sessions/facebook">

                <p class="font-bold text-white w-2/3 text-center">Ingresar con facebook</p>
                <ion-icon class="text-3xl text-white w-1/3" name="logo-facebook"></ion-icon>
            </a>


            <label class="block text-sm uppercase text-gray-500 mb-2 font-bold">Ingrese su email</label>
            <input class="w-full px-3 py-2 border border-gray-300 border rounded-md placeholder-gray-400" type="mail"
                placeholder="email" name="email" required value="{{#if email}}{{email}}{{else}}""{{/if}}">

            <label class="block text-sm uppercase text-gray-500 mb-2 font-bold">Ingresar Password</label>

            <input class="w-full px-3 py-2 border border-gray-300 border rounded-md placeholder-gray-400"
                type="password" placeholder="password" name="password" required>

            <input class="w-full bg-blue-600 rounded-lg hover:bg-blue-700 text-white font-bold py-3 cursor-pointer"
                type="submit" value="Ingresar">
            {{#if error}}
            <p class="border uppercase bg-red-500 rounded-md text-center text-white p-1 font-bold">{{error}}</p>
            {{/if}}
        </form>
        <div class="flex justify-between my-5">
            <a class="text-gray-500 font-bold text-xs" href="/register">No estas registrado? Registrate aquí</a>
            <a class="text-gray-500 font-bold text-xs" href="/passrecover">Olvidé mi contraseña</a>
        </div>
    </div>

</div>



<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
