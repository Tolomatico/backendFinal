<h1>{{title}}</h1>

{{#if products.length }}

<section class="container">
    {{#each products}}
    {{#if this.stock }}
   
    <div class="card">


        <img class="img" src={{this.thumbnail}} />
        <p>{{this.title}}</p>
        <p>${{this.price}}</p>
        <p>stock:{{this.stock}}</p>

        <form method="POST" action="api/carts/{{../cart}}/product/{{this.id}}">
            <button>Agregar al carrito</button>
        </form>

    </div>

    {{/if}}
    {{/each}}
</section>
{{#if hasPrevPage}}
<a href="/products?page={{prevPage}}"> Anterior</a>
{{/if}}
{{#if hasNextPage}}
<a href="/products?page={{nextPage}}"> Siguiente</a>
{{/if}}

<p>Pagina {{currentPage}} de {{totalPages}}</p>

{{else}}
<p>No hay productos disponibles.</p>

{{/if}}